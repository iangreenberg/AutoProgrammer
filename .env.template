# AutoProgrammer Environment Configuration Template
# Copy this file to .env and modify as needed

# ==== PATHS ====
# Path to your Node.js installation (update this to your actual path)
NODE_PATH=/usr/local/bin:/usr/local/lib/node_modules

# Path to Electron (crucial for running the desktop app)
# macOS users: typically installed via npm in node_modules
ELECTRON_PATH=./node_modules/.bin

# ==== APPLICATION SETTINGS ====
# AutoProgrammer output directory (where generated files are saved)
OUTPUT_DIR=./outputs

# Integration settings
ENABLE_CURSOR_INTEGRATION=true
CURSOR_OUTPUT_FILE=./cursor-output.txt

# ==== PERFORMANCE ====
# Adjust these based on your system capabilities
MAX_MEMORY_MB=4096
PARALLEL_PROCESSES=2

# ==== DEVELOPMENT SETTINGS ====
# Set to true for development mode with additional logging
DEBUG_MODE=false
LOG_LEVEL=info  # Options: debug, info, warn, error

# ==== OPTIONAL SERVICES ====
# Enable/disable optional features
ENABLE_AUTO_LAUNCH=true
ENABLE_CLIPBOARD_MONITORING=true 